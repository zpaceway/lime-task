generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Patient {
  id        String   @id @default(cuid())
  name      String
  dob       DateTime
  gender    String
  phone     String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  notes     Note[]
}

model Note {
  id             String   @id @default(cuid())
  patientId      String
  patient        Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  inputType      String
  rawContent     String
  transcription  String?
  summary        String?
  audioData      Bytes?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
